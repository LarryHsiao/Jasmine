<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:paddingEnd="16dp"
            android:paddingStart="16dp">

            <TableRow>

                <TextView
                    android:id="@+id/expenditureCreate_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:labelFor="@id/expenditureCreate_titleEditText"
                    android:text="@string/expenditureCreate_title" />


                <EditText
                    android:id="@+id/expenditureCreate_titleEditText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:lines="1"
                    android:inputType="text"
                    tools:text="Name" />
            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/expenditureCreate_amount"
                    android:layout_width="wrap_content"
                    android:labelFor="@id/expenditureCreate_amountEditText"
                    android:layout_height="wrap_content"
                    android:text="@string/expenditureCreate_amount"
                    app:layout_constraintStart_toStartOf="@+id/expenditureCreate_title"
                    app:layout_constraintTop_toBottomOf="@+id/expenditureCreate_titleEditText" />

                <EditText
                    android:id="@+id/expenditureCreate_amountEditText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:lines="1"
                    android:layout_weight="1"
                    app:layout_constraintStart_toStartOf="@+id/expenditureCreate_titleEditText"
                    app:layout_constraintTop_toBottomOf="@+id/expenditureCreate_titleEditText" />
            </TableRow>

            <TableRow>
                
            </TableRow>
        </TableLayout>

    </android.support.constraint.ConstraintLayout>
</layout>